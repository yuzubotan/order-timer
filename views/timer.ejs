    let remaining = timeoutMs / 1000;
    countdown.textContent = `è‡ªå‹•ç¢ºå®šã¾ã§ ${remaining} ç§’`;

    const interval = setInterval(() => {
      remaining--;
      countdown.textContent = `è‡ªå‹•ç¢ºå®šã¾ã§ ${remaining} ç§’`;
    }, 1000);

    const timer = setTimeout(() => {
      cleanup();
      resolve(true);
    }, timeoutMs);

    function cleanup() {
      clearTimeout(timer);
      clearInterval(interval);
